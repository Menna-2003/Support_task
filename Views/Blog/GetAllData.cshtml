@model IEnumerable<Blog>
@{
	Layout = "_blog";
}

<div class="dash-content">
    <div class="overview">
        <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">All Product</span>
        </div>
    </div>
    <div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <td class="table-light">id</td>
                    <td class="table-light">Name</td>
                    <td class="table-light">Description</td>
                    <td class="table-light">price</td>
                    <td class="table-light">Quantity</td>
                    <td class="table-light">Size</td>
                </tr>
            </thead>
            <tbody>
                @foreach ( var item in Model ) {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.price</td>
                        <td>@item.Quantity</td>
                        <td>@item.EnableSize</td>
                        <td>
                            <a class="btn btn-success" role="button">
                                <span class="material-symbols-outlined"> Edit </span>
                            </a>
                            <a class="btn btn-danger" role="button" asp-action="Delete" asp-route-id="@item.Id">
                                <span class="material-symbols-outlined"> delete </span>
                            </a>
                        </td>
                    </tr>
                }
                
            </tbody>
        </table>
    </div>
</div>
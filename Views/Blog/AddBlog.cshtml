@model Blog
@{
	Layout = "_Blog";
}

<div class="dash-content">
    <div class="overview">
        <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">Adding Blog</span>
        </div>

        <div>
            <form method="post" asp-action="AddBlog" class="row">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Blog Name</label>
                    <input asp-for="Name" type="text" class="form-control" placeholder="" />
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Blog Description</label>
                    <textarea asp-for="Description" type="text" class="form-control" placeholder=""></textarea>
                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="Quantity" for="" class="form-label">Blog Quantity</label>
                    <input asp-for="Quantity" type="number" class="form-control" placeholder="" />
                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="price" for="" class="form-label">Blog Price</label>
                    <input asp-for="price" type="number" class="form-control" placeholder="" />
                </div>
                <div class="mb-3 col-lg-12 d-flex align-items-center mt-4">
                    <div class="form-check">
                        <input asp-for="EnableSize" class="form-check-input" type="checkbox" value="" id="" />
                        <label asp-for="EnableSize" class="form-check-label" for=""> Enable Blog Size </label>
                    </div>
                </div>

                <div class="mb-3 col-lg-6">
                    <label for="" asp-for="company.Id" class="form-label">company</label>
                    <select asp-for="company.Id" class="form-select" >
                        <option selected>Select one</option>
                        <option value="1">nike</option>
                        <option value="2">adidas</option>
                    </select>
                </div>

                <div class="col-lg-12 d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>